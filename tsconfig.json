{
	"compilerOptions": {
		"outDir": "dist",
		"module": "es2022",
    	"moduleResolution": "Node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"target": "es2016",
		"lib": ["DOM", "ES2022"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.hbs"]
}
